# APX Environment Configuration Template
# Copy to .env and fill in your values

# Environment
ENVIRONMENT=dev  # dev, staging, production

# GCP Project
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Policy Store
POLICY_STORE_TYPE=firestore  # firestore, gcs, local
POLICY_BUCKET=apx-policy-artifacts
FIRESTORE_COLLECTION=policies

# Pub/Sub
PUBSUB_TOPIC=apx-requests
PUBSUB_PROJECT_ID=your-project-id

# Redis (Rate Limiting)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
OTEL_INSECURE=true
LOG_LEVEL=info  # debug, info, warn, error
LOG_SAMPLE_RATE=0.01

# Feature Flags
ENABLE_CANARY=false
ENABLE_CACHE=true

# Local Development (use emulators)
FIRESTORE_EMULATOR_HOST=localhost:8082
PUBSUB_EMULATOR_HOST=localhost:8085

# Portal (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3001

# Stripe (Monetization)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Firebase Auth
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=...
FIREBASE_CLIENT_EMAIL=...
